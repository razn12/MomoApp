<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1f5fe"
    >


    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sn"
        android:id="@+id/o1"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="chicken steam momo"
        android:id="@+id/o2"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/o1"
        android:layout_toEndOf="@+id/o1" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="QTY"
        android:id="@+id/o3"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/o2"
        android:layout_toEndOf="@+id/o2" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="amount"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:id="@+id/o4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/o3"
        android:layout_toEndOf="@+id/o3" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="time"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:id="@+id/o5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/o4"
        android:layout_toEndOf="@+id/o4" />
</RelativeLayout>