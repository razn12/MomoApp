<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e1f5fe">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.raazn.momoapp.Management"
        android:background="#e1f5fe">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Item Management:" />

        <Button
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:text="You  Can  Insert  new  Item  with  its  Sub  types. "
            android:id="@+id/button2"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="additem"
            android:padding="30dp"
            android:background="#f44336"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Price Management"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5" />

        <Button
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:text="You  can  Manage  price  detail  for  inserted  item"
            android:id="@+id/button5"
            android:onClick="addprice"
            android:padding="30dp"
            android:background="#2196f3"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_above="@+id/reg"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Order Management"
            android:id="@+id/textView11"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3" />

        <Button
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:text="You  Can  View  the  total  ordered  item  detail."
            android:id="@+id/button3"
            android:onClick="orderDetail"
            android:padding="30dp"
            android:background="#673ab7"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_below="@+id/textView11"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView21"
            android:layout_above="@+id/button3"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5" />

        <Button
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:text="You  can  change  user  name  and  password."
            android:id="@+id/reg"
            android:onClick="register"
            android:background="#ff5722"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="30dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Acount Management"
            android:id="@+id/textView"

            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="38dp" />

    </RelativeLayout>

</ScrollView>
